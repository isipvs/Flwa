<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">


    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:src="@drawable/piv1" />
    <!--
        Добавить информацию о покупателе
        и номер карты
    -->

    <TextView
        android:id="@+id/nameShop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/shop_name" />

    <GridLayout
        android:id="@+id/contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameShop"
        android:layout_alignParentStart="true"
        android:columnCount="5"
        android:rowCount="5">

        <TextView
            android:id="@+id/emailIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_below="@id/nameShop"
            android:layout_margin="5dp"
            android:fontFamily="@font/font_awesome"
            android:text="\uf003"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_below="@id/nameShop"
            android:layout_margin="5dp"
            android:text="Email: " />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:gravity="left"
            android:text="App1@mail.ru" />

        <TextView
            android:id="@+id/imagePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:fontFamily="@font/font_awesome"
            android:text="\uf095"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_column="1"
            android:text="Телефон: " />

        <TextView
            android:id="@+id/textPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_column="2"
            android:text="+7-902-543-32-57" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/font_awesome"
            android:text="\uf232"
            android:textColor="@color/whatsapp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_column="3"
            android:layout_gravity="right"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/font_awesome"
            android:text="\uf17e"
            android:layout_gravity="left"
            android:textColor="@color/skype"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_column="4"
            />

        <TextView
            android:id="@+id/webIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:fontFamily="@font/font_awesome"
            android:text="\uf0ac"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="4"
            android:text="http://www.google.ru" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:fontFamily="@font/font_awesome"
            android:text="\uf041"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_margin="5dp"
            android:layout_column="1"
            android:text="Адрес: " />

        <TextView
            android:id="@+id/textAddress"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_rowSpan="2"
            android:text="Большая Тульская улица 13\nМосква, 115191\nметро Тульская " />


        <ImageView
            android:id="@+id/map"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/map"
            />

    </GridLayout>





    <!--
        Добавить сайт

    -->


    <TextView
        android:id="@+id/txtWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contacts"
        android:layout_marginTop="5dp"
        android:text="@string/water" />

</RelativeLayout>